        }
    ],
    // Folder Templates extension settings
    "folderTemplates.structures": [
        {
            "name": "React Component (TS + SCSS)",
            "omitParentDirectory": true,
            "structure": [
                {
                    "fileName": "<FTName>.tsx",
                    "template": "reactComponent"
                },
                {
                    "fileName": "<FTName>.module.scss",
                    "template": "SCSSModule"
                }
            ]
        }
    ],
    "folderTemplates.fileTemplates": {
        "reactComponent": [
            "import styles from './<FTName>.module.scss';",
            "",
            "interface <FTName>Props {key?: number; children?: Array<JSX.Element>;};",
            "",
            "export default function <FTName>(props: <FTName>Props) {",
            "const {key, children} = props;",
            "return <div {...(key ? { key: key } : {})} className={styles.main}>{children}</div>",
            "}",
        ],
        "SCSSModule": ".main {}"
    },
